name: Android Build

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: gradle

    - name: Debug - List directory contents
      run: |
        echo "Root directory contents:"
        ls -la
        echo "aptlinks directory contents (if it exists):"
        ls -la aptlinks || echo "aptlinks directory not found"
    
    - name: Grant execute permission for gradlew
      run: |
        cd aptlinks
        chmod +x gradlew
      
    - name: Build Debug APK
      run: |
        cd aptlinks
        ./gradlew assembleDebug
      
    - name: List APK files
      run: |
        echo "Generated APK files:"
        find aptlinks/app/build/outputs/apk -name "*.apk" || echo "No APK files found"
        
    - name: Upload Debug APK
      uses: actions/upload-artifact@v4
      with:
        name: app-debug-apk
        path: aptlinks/app/build/outputs/apk/debug/app-debug.apk
        retention-days: 3
        if-no-files-found: warn
